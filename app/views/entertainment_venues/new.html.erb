<%= simple_form_for @entertainment_venue, url: entertainment_venues_path do |f| %>
	<%= f.input :title %>
	<%= f.input :category_id, as: :select, collection: Category.all %>
	<%= f.file_field :avatar %>
	<%= f.input :description, as: :text %>
	<%= f.hidden_field :status, value: 'notactive' %>
	<%= f.input :accord, as: :boolean, checked_value: true, unchecked_value: false %>
	<%= f.button :submit, "Создать" %>
<% end %>